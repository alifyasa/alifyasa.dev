---
import NavigationBar from "../components/Navigation/Bar.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
const mainClass =
	"fixed bottom-0" +
	" bg-zinc-800" +
	" w-full h-[calc(100%*14/15)]" +
	" text-zinc-100 font-montserrat" +
	" overflow-x-hidden overflow-y-auto";
const links = {
	GoogleCDN: "https://fonts.gstatic.com",
	BodoniMona: "https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital@0;1&display=swap",
	Montserrat: "https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap",
	OpenInNewTab:
		"https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200",
};
---

<!DOCTYPE html>
<html lang="en" class="w-full h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href={links.GoogleCDN} crossorigin />
		<link rel="preload" href={links.BodoniMona} as="style" />
		<link rel="preload" href={links.Montserrat} as="style" />
		<link rel="preload" href={links.OpenInNewTab} as="style" />
		<link rel="stylesheet" href={links.BodoniMona} />
		<link rel="stylesheet" href={links.Montserrat} />
		<link rel="stylesheet" href={links.OpenInNewTab} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-full h-full">
		<NavigationBar />
		<main class={mainClass}>
			<slot />
		</main>
	</body>
</html>
