---
import Button from "./Button.astro";
const links = {
	github: {
		imagePath: "/social_logo/github.png",
		href: "https://github.com/malifpy",
	},
	linkedin: {
		imagePath: "/social_logo/linkedin.png",
		href: "https://www.linkedin.com/in/muhammad-alif-putra-yasa-a91793219",
	},
};
---

<div class="bg-zinc-100 w-full fixed bottom-0 h-1/6">
	<div
		class="bg-zinc-700 h-1/3 flex justify-center items-center 2xl:text-3xl xl:text-2xl lg:text-xl md:text-lg sm:text-md"
	>
		FOLLOW ME
	</div>
	<div class="h-2/3 flex justify-evenly">
		<Button
			href={links.github.href}
			imagePath={links.github.imagePath}
		/>
		<Button
			href={links.linkedin.href}
			imagePath={links.linkedin.imagePath}
		/>
	</div>
</div>
