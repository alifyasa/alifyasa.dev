---
export interface Props {
	href: string;
	currentPath: string;
}

const { href, currentPath } = Astro.props;

const backgroundColor = currentPath === href ? "bg-zinc-600" : "bg-zinc-700";
const className = "flex flex-1 hover:bg-zinc-600" + " " + backgroundColor;
---

<a href={href} class={className}>
	<span class="m-auto 2xl:text-2xl xl:text-xl lg:text-lg md:text-md sm:text-sm"><slot /></span>
</a>
