---
import Layout from "../layouts/Layout.astro";
import SocialBar from "../components/Social/Bar.astro";
const links = {
	InformaticsEngineering:
		"https://stei.itb.ac.id/en/undergraduate-programs/bachelor-informatics/",
	ITB: "https://www.itb.ac.id/en/",
};
---

<Layout title="Alif Yasa">
	<div
		class="font-bodoni-moda w-full px-16 py-8 flex flex-col overflow-x-hidden overflow-y-auto absolute top-0 h-5/6"
	>
		<div
			class="text-9xl/tight text-right my-auto w-full"
			aria-label="My Name"
		>
			Muhammad <span class="underline">Alif</span><br />Putra <span
				class="underline">Yasa</span
			>
		</div>
		<div
			class="md:text-xl/tight lg:text-2xl xl:text-3xl/tight text-left w-full my-auto italic"
			aria-label="Short description about myself"
		>
			<a href={links.InformaticsEngineering} target="_blank">
				<span class="underline hover:bg-zinc-600"
					>Informatics Engineering</span
				>
			</a> student at
			<a href={links.ITB} target="_blank">
				<span class="underline hover:bg-zinc-600"
					>Bandung Institute of Technology</span
				>
			</a>. Interested in Automation and Machine Learning.
		</div>
	</div>
	<SocialBar />
</Layout>
