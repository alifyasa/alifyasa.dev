---
import Layout from "../layouts/Layout.astro";
import SocialBar from "../components/Social/Bar.astro";
const links = {
	InformaticsEngineering:
		"https://stei.itb.ac.id/en/undergraduate-programs/bachelor-informatics/",
	ITB: "https://www.itb.ac.id/en/",
};
---

<Layout title="Alif Yasa">
	<div
		class="font-bodoni-moda w-full p-8 sm:p-10 md:p-12 lg:p-14 xl:px-16 xl:py-0 lg:py-2 md:py-4 sm:py-6 py-8 flex flex-col overflow-x-hidden overflow-y-auto absolute top-0 h-5/6"
		vocab="https://schema.org/"
		typeof="Person"
	>
		<div
			class="text-6xl/tight sm:text-7xl/tight md:text-8xl/tight lg:text-9xl/tight text-right my-auto w-full"
		>
			<span property="name">
				Muhammad <span class="underline">Alif</span><br
				/>Putra <span class="underline">Yasa</span>
			</span>
		</div>
		<div
			class="text-lg sm:text-xl/tight md:text-2xl lg:text-3xl/tight text-left w-full my-auto italic"
			aria-label="Short description about myself"
		>
			<a href={links.InformaticsEngineering} target="_blank">
				<span
					class="underline hover:bg-zinc-600"
					property="affiliation"
					>Informatics Engineering</span
				>
			</a> student at
			<a href={links.ITB} target="_blank">
				<span
					class="underline hover:bg-zinc-600"
					property="affiliation"
					>Bandung Institute of Technology</span
				>
			</a>. Interested in Automation and Machine Learning.
		</div>
	</div>
	<SocialBar />
</Layout>
